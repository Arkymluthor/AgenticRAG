# API settings
DEBUG=true
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=*

# LLM API selection
USE_AZURE_OPENAI=false

# OpenAI API settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_CHAT_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Azure OpenAI API settings
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_CHAT_DEPLOYMENT=your_chat_deployment_name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your_embedding_deployment_name

# Azure Cognitive Search settings
SEARCH_ENDPOINT=https://your-search-service.search.windows.net
SEARCH_API_KEY=your_search_api_key_here
SEARCH_INDEX_NAME=documents

# Redis settings
REDIS_URL=redis://localhost:6379/0

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Application Insights settings
APPINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string_here

# Azure Functions settings
AzureWebJobsStorage=your_azure_storage_connection_string_here
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
